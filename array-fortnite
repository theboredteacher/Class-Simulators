<!DOCTYPE html>
<html>
<head>
    <title>Fortnite Inventory Simulator</title>
    <style>
        .inventory {
            font-family: Arial, sans-serif;
            border-collapse: collapse;
            width: 80%;
            margin-top: 20px;
        }
        .inventory td, .inventory th {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }
        .inventory th {
            background-color: #f2f2f2;
        }
        .add-item {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h2>Fortnite Inventory Simulator</h2>
    <div class="add-item">
        <label for="item-name">Item Name:</label>
        <input type="text" id="item-name" placeholder="Enter item name">
        <label for="item-quantity">Quantity:</label>
        <input type="number" id="item-quantity" min="1" value="1">
        <label for="item-type">Type:</label>
        <input type="text" id="item-type" placeholder="Enter item type">
        <label for="item-rarity">Rarity:</label>
        <input type="text" id="item-rarity" placeholder="Enter item rarity">
        <label for="item-description">Description:</label>
        <input type="text" id="item-description" placeholder="Enter item description">
        <button onclick="addItem()">Add Item</button>
    </div>
    <table class="inventory" id="inventory-table">
        <tr>
            <th>Item Name</th>
            <th>Quantity</th>
            <th>Type</th>
            <th>Rarity</th>
            <th>Description</th>
        </tr>
    </table>

    <script>
        var inventory = [
            ["Assault Rifle", 1, "Weapon", "Rare", "A versatile gun with good range."],
            ["Bandages", 5, "Healing Item", "Common", "Heals 15 health per use."],
            ["Shield Potion", 2, "Consumable", "Rare", "Grants 50 shield."]
        ];

        function addItem() {
            var itemName = document.getElementById("item-name").value;
            var itemQuantity = parseInt(document.getElementById("item-quantity").value);
            var itemType = document.getElementById("item-type").value;
            var itemRarity = document.getElementById("item-rarity").value;
            var itemDescription = document.getElementById("item-description").value;

            if (itemName !== "" && itemQuantity > 0 && itemType !== "" && itemRarity !== "" && itemDescription !== "") {
                inventory.push([itemName, itemQuantity, itemType, itemRarity, itemDescription]);
                updateTable();
            } else {
                alert("Please enter valid information for all fields.");
            }
        }

        function updateTable() {
            var table = document.getElementById("inventory-table");
            var newRow, itemNameCell, itemQuantityCell, itemTypeCell, itemRarityCell, itemDescriptionCell;

            // Clear the table except for the header row
            while (table.rows.length > 1) {
                table.deleteRow(1);
            }

            // Add new rows for each item in the inventory
            for (var i = 0; i < inventory.length; i++) {
                newRow = table.insertRow(-1);
                itemNameCell = newRow.insertCell(0);
                itemQuantityCell = newRow.insertCell(1);
                itemTypeCell = newRow.insertCell(2);
                itemRarityCell = newRow.insertCell(3);
                itemDescriptionCell = newRow.insertCell(4);

                itemNameCell.innerHTML = inventory[i][0];
                itemQuantityCell.innerHTML = inventory[i][1];
                itemTypeCell.innerHTML = inventory[i][2];
                itemRarityCell.innerHTML = inventory[i][3];
                itemDescriptionCell.innerHTML = inventory[i][4];
            }
        }

        // Initial table update
        updateTable();
    </script>
</body>
</html>
